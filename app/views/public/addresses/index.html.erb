<h1>配送先登録/一覧</h1>

<%= form_with model: @address, url: addresses_path, local: true do |f| %>
	<div>郵便番号（ハイフンなし）</div>
		<p><%= f.text_field :postal_code %></p>

	<div>住所</div>
		<p><%= f.text_area :address %></p>

	<div>宛名</div>
		<p><%= f.text_field :name %></p>

	<div><%= f.submit '新規登録' %></div>

<% end %>

<% @addresses.each do |address| %>

	<td><span><%= address.postal_code %></span></td>
	<td><span><%= address.address %></span></td>
	<td><span><%= address.name %></span></td>
	<td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %></td>
	<td><%= link_to "削除する", address_path(address.id), method: :delete ,"data-confirm" => "本当に消しますか?",class: "btn btn-danger" %></td>
<% end %>
