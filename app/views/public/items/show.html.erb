<h1>ジャンル検索</h1>
	<div>
		<% @genres.each do |genre| %>
		   <div><%= link_to genre.name, items_path(genre: genre.id) %></div>
		<% end %>
	</div>

<h1>商品詳細</h1>
<p><%= attachment_image_tag @item, :image, :fill, 60, 60 %></p>

<div>商品名</div>
<p><%= @item.name %></p>

<div>商品説明</div>
<p><%= @item.introduction %></p>

<div>税込価格（税抜価格）</div>
<p><%= @item.price %></p>

<%=form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
<%=f.hidden_field :item_id, :value => @item.id %>
<%=f.select :amount, ["１","2","3","4","5"], :prompt => "個数選択" %>
<%=f.submit "カートに入れる" %>
<% end %>